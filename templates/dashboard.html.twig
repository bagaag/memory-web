                            <li><a href="#">{{ svg_icon('event') }}<span>8th Grade</span></a></li>
                        </ul>
                    </div>
                </div>
                <!-- /Recent Updates -->
            </div>
            <div class="col">
                <!-- Seeds -->
                <div class="card">
                    <div class="card-header">Seeds</div>
                    <div class="card-body">
                        <ul class="icon-list">
                            <li><a href="#">{{ svg_icon('event') }}<span>8th Grade</span></a></li>
                            <li><a href="#">{{ svg_icon('thing') }}<span>Triple A</span></a></li>
                            <li><a href="#">{{ svg_icon('person') }}<span>Penelope Griswald</span></a></li>
                            <li><a href="#">{{ svg_icon('place') }}<span>Acton-Boxborough Regional High School</span></a></li>
                            <li><a href="#">{{ svg_icon('note') }}<span>Nathan Maxwell</span></a></li>
                        </ul>
                    </div>
                </div>
                <!-- /Seeds -->
            </div>
        </div>
        <div class="row">
            <div class="col">
                <!-- Create an Entry -->
                <div class="card">
                    <div class="card-header">Create an Entry</div>
                    <div class="card-body">
                        <ul class="icon-list">
                            <li><a href="#">{{ svg_icon('event') }}<span>Event</span></a></li>
                            <li><a href="#">{{ svg_icon('person') }}<span>Person</span></a></li>
                            <li><a href="#">{{ svg_icon('place') }}<span>Place</span></a></li>
                            <li><a href="#">{{ svg_icon('thing') }}<span>Thing</span></a></li>
                            <li><a href="#">{{ svg_icon('note') }}<span>Note</span></a></li>
                        </ul>
                    </div>
                </div>
                <!-- /Create an Entry -->
            </div>
            <div class="col">
                <!-- Timeline -->
                <div class="card">
                    <div class="card-header">Timeline</div>
                    <div class="card-body">
