                            <a href="#" class="col-3 year">More</a>
                        </div>
                    </div>
                </div>
                <!-- /Timeline -->
            </div>
            <div class="col">
                <!-- Tags -->
                <div class="card">
                    <div class="card-header">Tags</div>
                    <div class="card-body">
                        <div class="">
                            <a class="tag" href="#">Elephant</a>
                            <a class="tag" href="#">1980s</a>
                            <a class="tag" href="#">School</a>
                            <a class="tag" href="#">Friend</a>
                            <a class="tag" href="#">Book</a>
                            <a class="tag" href="#">Job</a>
