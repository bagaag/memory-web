                            <a class="tag" href="#">Social</a>
                            <a class="tag" href="#">Hobby</a>
                            <a class="tag-bare" href="#">More...</a>
                        </div>
                    </div>
                </div>
                <!-- /Tags -->
            </div>
        </div>
        <div class="row">
            <div class="col">                
                <!-- Browse Entries -->
                <div class="card">
                    <div class="card-header">Browse Entries</div>
                    <div class="card-body">
                        <form>
                            <div class="field-group">
                                <label for="browseBrowse" class="">Browse</label>
                                <select class="form-control" id="browseBrowse">
                                    <option>All</option>
                                    <option>Events</option>
                                    <option>People</option>
                                    <option>Places</option>
                                    <option>Things</option>
                                    <option>Notes</option>
                                </select>
                            </div>
                            <div class="field-group">
                                <label for="browseOrderBy" class="">Order By</label>
                                <select class="form-control" id="browseOrderBy">
                                    <option>Modified Date</option>
                                    <option>Created Date</option>
                                    <option>Title</option>
                                </select>
                            </div>                        
                            <div class="form-group">
                                <button class="btn btn-secondary">Browse</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /Browse Entries -->
            </div>
            <div class="col">
                <!-- Stats -->
                <div class="card stats">
                    <div class="card-header">By the Numbers</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
