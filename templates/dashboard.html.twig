{% from "./macros/svg_icon.macro.twig" import svg_icon as svg_icon %}
{% block title %}{{ h1 }}{% endblock %}
{% block body %}

<div class="banner"><h1 class="content">{{ h1 }}</h1></div>

<div class="content">

    <div class="container dashboard">
        <div class="row">
            <div class="col">
                <!-- Newest Entries -->
                <div class="card">
                    <div class="card-header">Newest Entries</div>
                    <div class="card-body">
                        <ul class="icon-list">
                            <li><a href="#">{{ svg_icon('note') }}<span>Nathan Maxwell</span></a></li>
                            <li><a href="#">{{ svg_icon('person') }}<span>Penelope Griswald</span></a></li>
                            <li><a href="#">{{ svg_icon('place') }}<span>Acton-Boxborough Regional High School</span></a></li>
                            <li><a href="#">{{ svg_icon('event') }}<span>8th Grade</span></a></li>
                            <li><a href="#">{{ svg_icon('thing') }}<span>Triple A</span></a></li>
                        </ul>
                    </div>
                </div>
                <!-- /Newest Entries -->
            </div>
            <div class="col">
                <!-- Recent Updates -->
                <div class="card">
                    <div class="card-header">Recent Updates</div>
                    <div class="card-body">
                        <ul class="icon-list">
                            <li><a href="#">{{ svg_icon('person') }}<span>Penelope Griswald</span></a></li>
                            <li><a href="#">{{ svg_icon('place') }}<span>Acton-Boxborough Regional High School</span></a></li>
                            <li><a href="#">{{ svg_icon('thing') }}<span>Triple A</span></a></li>
